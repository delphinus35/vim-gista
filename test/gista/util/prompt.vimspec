function! Capture(command) abort " {{{
  redir => contents
  silent execute a:command
  redir END
  return split(contents, '\v\r?\n')
endfunction" }}}

Describe gista#util#prompt
  Describe #echo({msg}[, ...])
    It should echo a {msg}
      let ret = Capture('call gista#util#prompt#echo("foo")')
      Assert Equals(ret, ['foo'])

      let ret = Capture(
            \ 'call gista#util#prompt#echo("foo", "bar")'
            \)
      Assert Equals(ret, ['foo bar'])

      let ret = Capture(
            \ 'call gista#util#prompt#echo("foo\nbar")'
            \)
      Assert Equals(ret, ['foo', 'bar'])
    End
  End

  Describe #debug({msg}[, ...])
    Before
      let stored_gita_debug = g:gista#debug
    End
    After
      let g:gista#debug = stored_gita_debug
    End

    It should echo a {msg} with a special prefix when g:gista#debug == 1
      let g:gista#debug = 1
      let ret = Capture('call gista#util#prompt#debug("foo")')
      Assert Equals(ret, ['DEBUG: vim-gista: foo'])

      let ret = Capture(
            \ 'call gista#util#prompt#debug("foo", "bar")'
            \)
      Assert Equals(ret, ['DEBUG: vim-gista: foo bar'])

      let ret = Capture(
            \ 'call gista#util#prompt#debug("foo\nbar")'
            \)
      Assert Equals(ret, ['DEBUG: vim-gista: foo', 'bar'])
    End

    It should NOT echo a {msg} when g:gista#debug == 0
      let g:gista#debug = 0
      let ret = Capture('call gista#util#prompt#debug("foo")')
      Assert Equals(ret, [])

      let ret = Capture(
            \ 'call gista#util#prompt#debug("foo", "bar")'
            \)
      Assert Equals(ret, [])

      let ret = Capture(
            \ 'call gista#util#prompt#debug("foo\nbar")'
            \)
      Assert Equals(ret, [])
    End
  End

